<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/confirm_round_backdlg"
     >
    
     <TextView 
       android:id="@+id/back_title"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:text="确认"
       android:textColor="#000000"
       android:textSize="20dip"
       android:layout_marginTop="10dp"
       />
     <TextView 
       android:id="@+id/back_content"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@id/back_title"
       android:layout_centerHorizontal="true"
       android:text="您确认要删除此分类全部笔记吗?"
       android:textSize="18dip"
       android:textColor="#bb000000"
       android:layout_marginTop="20dp"
       />
     <LinearLayout 
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:background="@drawable/confirm_round_backdlg"
         android:layout_below="@id/back_content"
         android:layout_marginTop="10dp"
         android:gravity="center">
         
       <Button 
         android:id="@+id/remain"
         android:layout_width="150dp"
         android:layout_height="50dp"
         android:text="确认"
         android:textSize="18dip"
         android:textColor="#0000ff"
         android:gravity="center"
         android:background="@drawable/selector_confirm_button"
        
         />
         
        <Button 
         android:id="@+id/noremain"
         android:layout_width="150dp"
         android:layout_height="50dp"
         android:text="取消"
         android:textSize="18dip"
         android:textColor="#0000ff"
         android:gravity="center"
         android:background="@drawable/selector_back"
         />
         
     </LinearLayout>
        
        
     
</RelativeLayout>
