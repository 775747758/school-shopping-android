<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFCF8"
    android:orientation="vertical" >

    <include layout="@layout/title_bar_register3" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp" >

        <TextView
            android:clickable="true"
            android:onClick="selectcity"
             android:id="@+id/city_et"
            android:digits="0123456789"
            android:textColorHint="#B5B4B4"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="选择城市"
            android:gravity="center_vertical"
            android:paddingLeft="45dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/user_2" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:background="#B5B4B4" />
    </RelativeLayout>
    
   
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp" >

        <TextView
            android:clickable="true"
            android:onClick="selectschool"
            android:textColor="#B5B4B4"
            android:id="@+id/school_et"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#00000000"
            android:hint="选择学校"
            android:paddingLeft="50dp"
            android:textColorHint="#B5B4B4" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/user_2" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:background="#B5B4B4" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="#B5B4B4" />


    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <TextView
            android:onClick="returnn"
            android:clickable="true"
            android:layout_weight="1"
            android:id="@+id/category_tv"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/selector__category_item"
            android:cacheColorHint="#00000000"
            android:gravity="center"
            android:text="返回"
            android:textColor="@drawable/selector__recommend_gv_color"
            android:textColorHint="#00000000"
            android:textSize="18dp"
            />

        <TextView
            android:onClick="next"
            android:clickable="true"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/selector__category_item"
            android:textColor="@drawable/selector__recommend_gv_color"
            android:cacheColorHint="#00000000"
            android:gravity="center"
            android:text="下一步"
            
            android:textColorHint="#00000000"
            android:textSize="18dp"
             />
    </LinearLayout>

</LinearLayout>