<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
    
    <include  android:id="@+id/actionBar"  layout="@layout/title_bar_friends"/>
    
     
    
    <com.school.shopping.view.ElasticListView
        android:layout_below="@id/actionBar"
        android:background="#FFFFFF"
        android:id="@+id/lv_friends"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

     <com.school.shopping.view.QuickIndexBar
        android:layout_below="@id/actionBar"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        android:id="@+id/quickIndexBar"
        android:layout_width="20dp"
        android:layout_height="500dp"/> 
    
    <TextView 
         android:layout_below="@id/actionBar"
        android:id="@+id/tv_index"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:textSize="@dimen/font1"
        android:textColor="#8F8F94"
        android:background="#F0F0F6"
        android:layout_width="match_parent"
         android:layout_height="wrap_content"
        />
    
</RelativeLayout>
