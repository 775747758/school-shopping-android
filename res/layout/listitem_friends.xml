<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.school.shopping"
    android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/selector_dialog_button"
    android:layout_height="80dp" >
    
    <TextView 
        android:id="@+id/tv_index"
        android:text="A"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:textSize="@dimen/font1"
        android:textColor="#8F8F94"
        android:background="#F0F0F6"
        android:layout_width="match_parent"
         android:layout_height="wrap_content"
        />
    
    <RelativeLayout 
        android:layout_below="@id/tv_index"
        android:layout_width="match_parent"
    	android:layout_height="60dp"
        >
        
     <com.school.shopping.view.CircleImageView
         android:layout_centerVertical="true"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/portrait"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_launcher" />
     
      <TextView
          android:layout_toRightOf="@id/portrait"
          android:text="邓文杰"
          android:layout_centerVertical="true"
            android:ems="10"
            android:ellipsize="end"
            android:singleLine="true"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/bodyDeep"/>

   
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="75dp"
        android:background="@color/divider2" />
        
        
    </RelativeLayout>
    
    
</RelativeLayout>