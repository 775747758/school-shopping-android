<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/titleBarHeight"
    android:background="@drawable/titlebar"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/iv_back"
        android:padding="10dp"
        android:layout_width="@dimen/titleBarHeight"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="0dp"
        android:clickable="true"
        android:src="@drawable/selector_backbutton"
        android:gravity="center" >
    </ImageView>

    <TextView
        android:id="@+id/title_bar_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        android:textAppearance="?android:attr/textAppearanceMedium" />


        <TextView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/tv_menu_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/titleBarPaddingRight"
            android:paddingRight="@dimen/titleBarPaddingRight"
            android:singleLine="true"
            android:text="保存"
            android:textColor="@color/selector_tv_menu_left"
            android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>