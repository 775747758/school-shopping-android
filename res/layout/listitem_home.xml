<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#00000000" >
        
        <ImageView
         android:id="@+id/goodbg_iv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/close" />
        
         <TextView
            android:id="@+id/tv_distance"
            android:layout_margin="15dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/font4" />
        
    </RelativeLayout>

    

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#00000000" >
        
        <TextView
            android:id="@+id/price_tv"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="153dp"
            android:textStyle="bold|italic"
            android:text="Â¥100"
            android:textColor="#FF4031"
            android:textSize="@dimen/font4" />
        
         <TextView
            android:id="@+id/goodName_tv"
            android:ems="8"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_centerVertical="true"
            android:textColor="@color/titleBarFontReg"
            android:textSize="@dimen/font1" />
        
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        >
        <com.school.shopping.view.CircleImageView
            android:clickable="true"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:layout_alignParentBottom="true"
         android:id="@+id/portrait"
        app:border_color="@color/blue"
            app:border_width="2dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_launcher" />
        
    </RelativeLayout>

    

</RelativeLayout>